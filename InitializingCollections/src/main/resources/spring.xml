<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">


<beans>
<bean id ="triangle" class = "com.krishna.usingcollection.Triangle">
 <property name = "points">
 <list>
 		<ref bean = "ZEROPOINT"/>
 		<ref bean = "POINT2"/>
 		<ref bean = "POINT3"/>
 </list>
 </property>
 </bean>

<bean id= "ZEROPOINT" class ="com.krishna.usingcollection.Point">
 	<property name = "x" value = "0"/>
 	 <property name = "y" value = "0"/>
</bean>


<bean id= "POINT2" class ="com.krishna.usingcollection.Point">
 	<property name = "x" value = "20"/>
 	 <property name = "y" value = "0"/>
</bean>


<bean id= "POINT3" class ="com.krishna.usingcollection.Point">
 	<property name = "x" value = "-20"/>
 	 <property name = "y" value = "0"/>
</bean>

</beans>

